@page "/tipoAssets/create"
@using BackEnd_PGI.Model
@inherits CrearTipoAssetComponent

<div class="content-data mt-4" style="padding: 50px;">
    <h3>Crear Nuevo Tipo Asset</h3>

    <EditForm Model="@TipoAsset" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label for="Nombre" class="form-label">Nombre</label>
            <InputText id="Nombre" class="form-control" @bind-Value="TipoAsset.Nombre" />
            <ValidationMessage For="@(() => TipoAsset.Nombre)" class="text-danger" />
        </div>

        <div class="mb-3">
            <label for="Descripcion" class="form-label">Descripción</label>
            <InputTextArea id="Descripcion" class="form-control" @bind-Value="TipoAsset.Descripcion" />
            <ValidationMessage For="@(() => TipoAsset.Descripcion)" class="text-danger" />
        </div>

        <div class="mb-3">
            <label for="Icono" class="form-label">Icono</label>
            <InputSelect id="Icono" class="form-control" @bind-Value="TipoAsset.Icono">
                @foreach (var iconName in Enum.GetValues(typeof(IconName)))
                {
                    <option value="@iconName">@iconName</option>
                }
            </InputSelect>
        </div>


        <button type="submit" class="btn btn-success">Guardar</button>
        <a class="btn btn-secondary" @onclick="Cancel">Cancelar</a>
    </EditForm>
</div>
